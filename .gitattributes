# Auto detect text files and ensure LF line endings
* text=auto eol=lf

# Explicitly declare text files
*.js text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.svg text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.env text eol=lf
*.example text eol=lf
*.config text eol=lf
*.lock text eol=lf

